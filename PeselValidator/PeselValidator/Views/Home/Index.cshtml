@model PeselValidator.Models.PersonModel

@{
    ViewBag.Title = "Validator";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
</head>
<body>
    <div class="jumbotron">
        <h1 class="text-center"> Witaj w mojej aplikacji ! </h1>
        <h3 class="text-center"> Aby sprawdzić informacje na temat swojego PESELu, wypełnij proszę pola poniżej </h3>
    </div>
    <div class="row">
        <div class="panel panel-default col-lg-offset-3 col-lg-6">
            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    <div class="form-group col-lg-offset-3">
                        <label>Imię</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-lg-offset-3">
                        <label>Pesel</label>
                        @Html.TextBoxFor(x => x.IdentityNumber, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-lg-offset-3">
                        <label>Data urodzenia</label>
                        @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control" })
                    </div>
                    <div class="form-inline form-group col-lg-offset-3">
                        <label>Mezczyzna</label>
                        @Html.RadioButtonFor(x => x.Gender, "Male")
                        <label>Kobieta</label>
                        @Html.RadioButtonFor(x => x.Gender, "Female")
                        @Html.ValidationMessageFor(x => x.Gender,"*")
                    </div>
                    <div class="form-group">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <label class="text-justify">Aby sprawdzić poprawność PESELU a następnie wyświetlić informacje o dacie urodzenia oraz płci osoby posiadającej powyższy pesel, prosze nacisnąć poniższy przycisk</label>
                                <input class="btn btn-primary center-block" type="submit" value="Sprawdź" name="checkDateAndGender">
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <label class="text-justify">Aby porównać informacje wyliczone z PESELU, z informacjami podanymi powyżej, prosze nacisnąć przycisk poniżej</label>
                                <input class="btn btn-primary center-block" type="submit" value="Porównaj" name="checkCorrectnessOfDateAndID" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>

</html>






